<Window x:Class="HageLauncher.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HageLauncher"
        mc:Ignorable="d"
        Title="Downloading..." Height="90" Width="270">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" Grid.Row="0" x:Name="title">Downloading minecraft🤗</TextBlock>
        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0" VerticalAlignment="Stretch" Grid.Row="1" IsIndeterminate = "true"/>
    </Grid>
</Window>

    